<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.musicbeat.web.mapper.PlayListMapper">

  <!--设置二级缓存-->
  <cache eviction="LRU" type="org.mybatis.caches.redis.RedisCache"/>

  <resultMap id="BaseResultMap" type="com.musicbeat.web.model.PlayList">
    <constructor>
      <idArg column="mid" javaType="java.lang.Integer" jdbcType="INTEGER" />
      <idArg column="uid" javaType="java.lang.Integer" jdbcType="INTEGER" />
    </constructor>
  </resultMap>

  <delete id="deleteByPrimaryKey" flushCache="true" parameterType="map">
    delete from playlist
    where mid = #{mid,jdbcType=INTEGER}
      and uid = #{uid,jdbcType=INTEGER}
  </delete>

  <insert id="insert" flushCache="true" parameterType="com.musicbeat.web.model.PlayList">
    insert into playlist (mid, uid)
    values (#{mid,jdbcType=INTEGER}, #{uid,jdbcType=INTEGER})
  </insert>

  <insert id="insertSelective" flushCache="true" parameterType="com.musicbeat.web.model.PlayList">
    insert into playlist
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="mid != null">
        mid,
      </if>
      <if test="uid != null">
        uid,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="mid != null">
        #{mid,jdbcType=INTEGER},
      </if>
      <if test="uid != null">
        #{uid,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
</mapper>